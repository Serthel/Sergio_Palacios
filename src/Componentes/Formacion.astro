---
import Card from '../components/Card.astro';

const formaciones = [
  {
    titulo: DESARROLLador WEB FULL Stack intermedio",
    institucion: "Universidad Distrital Francisco José de Caldas.",
    año: "Febrero  2023 – Julio 2023",
  
  },
  {
    titulo: "DESARROLLador WEB FULL Stack.",
    institucion: "universidad Industrial de Santander (UIS).",
    año: "Abril  2022 – Noviembre 2022",
  },
  {
    titulo: "Tecnólogo de análisis y desarrollo de sistemas de Información (ADSI)",
    institucion: "SENA.",
    año: "2012 -2013",
  },
  {
    titulo: "Técnico en Programación de Software",
    institucion: "SENA.",
    año: "2011",
  },
];
---

<section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 p-6 bg-gray-50">
  {formaciones.map((formacion) => (
    <div class="max-w-sm bg-white rounded-2xl shadow-md border border-gray-200 hover:shadow-lg transition-shadow duration-300">
      <img src={formacion.image} alt={formacion.title} class="w-full h-48 object-cover rounded-t-2xl" />
      <div class="p-5">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">{formacion.title}</h3>
        <p class="text-gray-600 mb-3">{formacion.description}</p>
        <ul class="list-disc list-inside text-sm text-gray-700 space-y-1">
          {formacion.lista.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </div>
  ))}
</section>
